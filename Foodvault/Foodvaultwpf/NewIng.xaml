<Window x:Class="Foodvaultwpf.NewIng"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Foodvaultwpf"
        mc:Ignorable="d"
        Title="NewIng" Height="200" Width="300" WindowStyle="None" Background="Transparent" AllowsTransparency="True" Topmost="True">
    <Border CornerRadius="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Color="#FFB4B4FF" Offset="0" />
                <GradientStop Color="White" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Label x:Name="label" HorizontalAlignment="Left" Height="27" Margin="0,59,0,0" VerticalAlignment="Top" Width="55"/>
            <TextBox x:Name="ingImpNameTB" HorizontalAlignment="Left" Height="23" Margin="60,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
            <TextBox x:Name="ingImpProtTB" HorizontalAlignment="Left" Height="23" Margin="60,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
            <TextBox x:Name="ingImpCalTB" HorizontalAlignment="Left" Height="23" Margin="60,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
            <TextBox x:Name="ingImpFatTB" HorizontalAlignment="Left" Height="23" Margin="60,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
            <TextBox x:Name="ingImpCarbTB" HorizontalAlignment="Left" Height="23" Margin="60,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
            <Label x:Name="label_Copy" Content="Kalorien" HorizontalAlignment="Left" Height="27" Margin="5,49,0,0" VerticalAlignment="Top" Width="55"/>
            <Label x:Name="label_Copy1" Content="Name" HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="50"/>
            <Label x:Name="label_Copy2" Content="Eiweiss" HorizontalAlignment="Left" Height="27" Margin="5,76,0,0" VerticalAlignment="Top" Width="50"/>
            <Label x:Name="label_Copy3" Content="Fett" HorizontalAlignment="Left" Height="27" Margin="10,103,0,0" VerticalAlignment="Top" Width="50"/>
            <Label x:Name="label_Copy4" Content="Kohlenhydrate" HorizontalAlignment="Left" Height="27" Margin="5,130,0,0" VerticalAlignment="Top" Width="50"/>
            <Label x:Name="label1" Content="Nährwerte pro 100g:" HorizontalAlignment="Left" Margin="80,25,0,0" VerticalAlignment="Top" Width="122" Height="30"/>
            <Button x:Name="ingImpBtn" Content="speichern" HorizontalAlignment="Left" Margin="101,168,0,0" VerticalAlignment="Top" Width="75" Click="ingImpBtn_Click"/>


        </Grid>
    </Border>
</Window>
